<Layout title={`${report.data.kumi}ÁµÑ${report.data.han}Áè≠ - ${report.data.company} - RE:DAYS`}>
  <section class="report-detail">
    <div class="container">
      <div class="report-header">
        <div class="report-badge">{report.data.kumi}ÁµÑ{report.data.han}Áè≠</div>
        <h1 class="report-title">{report.data.company}</h1>
