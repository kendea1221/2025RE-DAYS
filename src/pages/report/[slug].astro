      </div>
      
      <div class="report-back">
        <a href="/report" class="back-link">‚Üê ÊàêÊûúÁâ©‰∏ÄË¶ß„Å´Êàª„Çã</a>
      </div>
    </div>
  </section>
  
  <!-- ÂãïÁîª„É¢„Éº„ÉÄ„É´ -->
  <div id="video-modal" class="modal">
    <div class="modal-content">
      <button class="modal-close">&times;</button>
      <div class="modal-body">
        <video id="modal-video" controls controlsList="nodownload">
          <source src="" type="video/mp4">
          „Åä‰Ωø„ÅÑ„ÅÆ„Éñ„É©„Ç¶„Ç∂„ÅØÂãïÁîª„Çø„Ç∞„Çí„Çµ„Éù„Éº„Éà„Åó„Å¶„ÅÑ„Åæ„Åõ„Çì„ÄÇ
        </video>
      </div>
    </div>
  </div>
  
  <script>
    const modal = document.getElementById('video-modal');
    const modalVideo = document.getElementById('modal-video') as HTMLVideoElement;
    const closeBtn = document.querySelector('.modal-close');
    const videoLink = document.querySelector('.video-link');
    
    if (videoLink && modal && modalVideo) {
      videoLink.addEventListener('click', (e) => {
        e.preventDefault();
        const videoUrl = videoLink.getAttribute('href');
        if (videoUrl) {
          const source = modalVideo.querySelector('source');
          if (source) {
            source.src = videoUrl;
            modalVideo.load();
            modal.style.display = 'flex';
            modalVideo.play();
          }
        }
      });
    }
    
    if (closeBtn && modal && modalVideo) {
      closeBtn.addEventListener('click', () => {
        modal.style.display = 'none';
        modalVideo.pause();
        modalVideo.currentTime = 0;
      });
    }
    
    if (modal && modalVideo) {
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.style.display = 'none';
          modalVideo.pause();
          modalVideo.currentTime = 0;
        }
      });
    }
    
    // ESC„Ç≠„Éº„Åß„É¢„Éº„ÉÄ„É´„ÇíÈñâ„Åò„Çã
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && modal.style.display === 'flex' && modalVideo) {
        modal.style.display = 'none';
        modalVideo.pause();
        modalVideo.currentTime = 0;
      }
    });
  </script>
</Layout>

